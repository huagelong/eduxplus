{% extends "@AdminBundle/layout/main.html.twig" %}
{% import "@AdminBundle/macros/chapter_tree.html.twig" as macros %}

{% block page_title %}章节管理{% endblock %}
{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="{{ path("admin_teach_course_index") }}">课程管理</a></li>
{% endblock %}

{% block head_custom_stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/plugins/jquery-nestable2/jquery.nestable.min.css') }}">
{% endblock %}

{% block body_javascript %}
    {{ parent() }}
    <script src="{{ asset('assets/plugins/jquery-nestable2/jquery.nestable.min.js') }}"></script>
{% endblock %}

{% block body_custom_javascript %}
    <script>
        $(function(){
            $('#tree').nestable({maxDepth:3, scroll:true});

            $('.tree-tools').on('click', function(e){
                var action = $(this).data('action');
                if (action === 'expand') {
                    $('.dd').nestable('expandAll');
                }
                if (action === 'collapse') {
                    $('.dd').nestable('collapseAll');
                }
            });

            $("#sortSave").click(function(){
                var serialize = $('#tree').nestable('serialize');
                requestPost('{{ path('admin_api_teach_chapter_updateSortDo', {"id":id}) }}', JSON.stringify(serialize));
            });
        });

    </script>
{% endblock %}

{% block page %}
<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="card card-default">
                <div class="card-header">
                    <div class="btn-group">
                        <button class="btn btn-primary btn-sm tree-tools" data-action="expand" title="展开">
                            <i class="fas fa-plus-square-o"></i>&nbsp;展开
                        </button>
                        <button class="btn btn-primary btn-sm tree-tools" data-action="collapse"
                           title="收起">
                            <i class="fas fa-minus-square-o"></i>&nbsp;收起
                        </button>
                    </div>
                    {% if is_authorized('admin_api_teach_chapter_updateSortDo') %}
                        <div class="btn-group">
                            <button class="btn btn-info btn-sm" id="sortSave" title="保存">
                                <i class="fas fa-save"></i><span class="hidden-xs">&nbsp;保存排序 </span>
                            </button>
                        </div>
                    {% endif %}
                </div>
                <!-- /.box-header -->
                <div class="card-body table-responsive no-padding">
                    <div class="dd" id="tree">
                        {{ macros.chapter_tree(all, 0) }}
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
    </div>

</section>

{% endblock %}

