{% extends "@AdminBundle/layout/main.html.twig" %}

{% block page_title %}菜单管理{% endblock %}

{% block head_custom_stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/plugins/jquery-nestable/style.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/plugins/jquery-nestable/style.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/plugins/select2/css/select2.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/plugins/fontawesome-iconpicker/css/fontawesome-iconpicker.min.css') }}">
{% endblock %}

{% block page %}
<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="card card-default">
                <div class="card-header">
                    <div class="btn-group">
                        <button class="btn btn-primary btn-sm menu-tree-tools" data-action="expand" title="展开">
                            <i class="fas fa-plus-square-o"></i>&nbsp;展开
                        </button>
                        <button class="btn btn-primary btn-sm menu-tree-tools" data-action="collapse"
                           title="收起">
                            <i class="fas fa-minus-square-o"></i>&nbsp;收起
                        </button>
                    </div>

                    <div class="btn-group">
                        <button class="btn btn-info btn-sm" title="保存">
                            <i class="fas fa-save"></i><span class="hidden-xs">&nbsp;保存</span>
                        </button>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="card-body table-responsive no-padding">
                    <div class="dd" id="menu-tree">
                        <ol class="dd-list">
                            {% for menu in allMenu[0] %}
                            <li class="dd-item" data-id="{{ menu.id }}">
                                <div class="dd-handle">
<i class="{{ menu.style|default('fas fa-caret-right') }}"></i>&nbsp;<strong>{{ menu.name }}</strong>&nbsp;&nbsp;&nbsp;
                                    {% if menu.url!="" %}<a href="{{ path(menu.url) }}" class="dd-nodrag">/</a>{% endif %}
                                    <span class="text-muted"> {{ menu.descr }}</span>
        <span class="pull-right dd-nodrag">
            <a href="/auth/menu/{{ menu.id }}/edit"><i class="fas fa-edit"></i></a>
            <a href="javascript:;" data-id="{{ menu.id }}" class="tree_branch_delete"><i class="fas fa-trash"></i></a>
        </span>
                                </div>
                                {% if allMenu[menu.id] is defined %}
                                <ol class="dd-list">
                                    {% for menu2 in allMenu[menu.id] %}
                                    <li class="dd-item" data-id="{{ menu2.id }}">
                                        <div class="dd-handle">
        <i class="{{ menu2.style|default('fas fa-caret-right') }}"></i>&nbsp;<strong>{{ menu2.name }}</strong>&nbsp;&nbsp;&nbsp;
                                            {% if menu2.url!="" %}<a href="{{ path(menu2.url) }}" class="dd-nodrag">/</a>{% endif %}
                                            <span class="text-muted"> {{ menu2.descr }}</span>
                                            <span class="pull-right dd-nodrag">
            <a href="/auth/menu/{{ menu2.id }}/edit"><i class="fas fa-edit"></i></a>
            <a href="javascript:;" data-id="{{ menu2.id }}" class="tree_branch_delete"><i class="fas fa-trash"></i></a>
        </span>
                                        </div>
                                        {#第三级#}
                                        {% if allMenu[menu2.id] is defined %}
                                            <ol class="dd-list">
                                                {% for menu3 in allMenu[menu2.id] %}
                                                    <li class="dd-item" data-id="{{ menu3.id }}">
                                                        <div class="dd-handle">
                                                            <i class="{{ menu3.style|default('fas fa-caret-right') }}"></i>&nbsp;<strong>{{ menu3.name }}</strong>&nbsp;&nbsp;&nbsp;
                                                            {% if menu3.url!="" %}<a href="{{ path(menu3.url) }}" class="dd-nodrag">/</a>{% endif %}
                                                            <span class="text-muted"> {{ menu3.descr }}</span>
                                                            <span class="pull-right dd-nodrag">
            <a href="/auth/menu/{{ menu3.id }}/edit"><i class="fas fa-edit"></i></a>
            <a href="javascript:;" data-id="{{ menu3.id }}" class="tree_branch_delete"><i class="fas fa-trash"></i></a>
        </span>
                                                        </div>
                                                    </li>
                                                {% endfor %}
                                            </ol>
                                        {% endif %}

                                    </li>
                                    {% endfor %}
                                </ol>
                                {% endif %}
                            </li>
                            {% endfor %}

                        </ol>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
        </div>


        <div class="col-md-6">
            <div class="card card-default">
                <div class="card-header with-border">
                    <h4 class="card-title">新增</h4>
                </div>
                <!-- /.box-header -->
                <div class="card-body" style="display: block;">
                    <form method="POST" action="/auth/menu" class="form-horizontal" accept-charset="UTF-8" >
                            <div class="form-group row">
                                <label class="col-sm-2 require col-form-label">父级菜单</label>
                                <div class="col-sm-8">
                                    <input type="hidden" name="parent_id"/>
                                    <select class="form-control select2" style="width: 100%;" name="parent_id" data-value="" >
                                        <option>Alabama</option>
                                        <option>Alaska</option>
                                        <option>California</option>
                                        <option>Delaware</option>
                                        <option>Tennessee</option>
                                        <option>Texas</option>
                                        <option>Washington</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group  row">
                                <label for="title" class="col-sm-2  require col-form-label">标题</label>
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-edit fa-fw"></i></span>
                                        </div>
                                        <input type="text" id="title" name="title" value="" class="form-control title" placeholder="输入标题" required="1">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group  row">
                                <label for="sort" class="col-sm-2  require col-form-label">排序</label>
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-sort-amount-up fa-fw"></i></span>
                                        </div>
                                        <input type="text" id="sort" name="sort" value="0" class="form-control" >
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="icon" class="col-sm-2 control-label">图标</label>
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                             <span class="input-group-text"><i class="fas fa-adjust fa-fw"></i></span>
                                        </div>
                                        <input style="width: 140px" type="text" id="icon" name="icon" value=""
                                               class="form-control icon"
                                               placeholder="输入图标" required="1"
                                        >
                                    </div>
                                    <span class="help-block">
                                        <i class="fas fa-info-circle"></i>
                                        &nbsp;For more icons please see <a href="http://fontawesome.io/icons/" target="_blank">http://fontawesome.io/icons/</a>
                                    </span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-2 require col-form-label">路径</label>
                                <div class="col-sm-8">
                                    <input type="hidden" name="uri"/>
                                    <select class="form-control select2" style="width: 100%;" name="uri" data-value="" >
                                        <option>Alabama</option>
                                        <option>Alaska</option>
                                        <option>California</option>
                                        <option>Delaware</option>
                                        <option>Tennessee</option>
                                        <option>Texas</option>
                                        <option>Washington</option>
                                    </select>
                                </div>
                            </div>

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">是否显示</label>
                            <div class="col-sm-8">
                                <input type="checkbox" name="isShow" checked data-bootstrap-switch data-off-color="danger" data-on-color="success">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">是否锁定</label>
                            <div class="col-sm-8">
                                <input type="checkbox" name="isLock" data-bootstrap-switch data-off-color="danger" data-on-color="success">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">仅权限</label>
                            <div class="col-sm-8">
                                <input type="checkbox" name="isAccess" data-bootstrap-switch data-off-color="danger" data-on-color="success">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">描述</label>
                            <div class="col-sm-8">
                                <textarea class="form-control" name="descr" rows="3" placeholder="输入 ..."></textarea>
                            </div>
                        </div>

                        <!-- /.box-body -->
                        <div class="card-footer">
                            <div class="col-md-2"></div>
                            <div class="col-md-8">
                                <div class="btn-group">
                                    <button type="submit" class="btn btn-info">提交</button>
                                </div>
                            </div>
                        </div>
                    </form>

                </div>
                <!-- /.box-body -->
            </div>


        </div>
    </div>

</section>

{% endblock %}
{% block body_javascript %}
    {{ parent() }}
    <script src="{{ asset('assets/plugins/jquery-nestable/jquery.nestable.js') }}"></script>
    <script src="{{ asset('assets/plugins/select2/js/select2.full.min.js') }}"></script>
    <script src="{{ asset('assets/plugins/fontawesome-iconpicker/js/fontawesome-iconpicker.min.js') }}"></script>
    <script src="{{ asset('assets/plugins/bootstrap-switch/js/bootstrap-switch.min.js') }}"></script>
{% endblock %}
{% block body_custom_javascript %}
<script>
    $(function(){

        $('.select2').select2({ theme: 'bootstrap4', "allowClear":true,"placeholder":{"id":"","text":"\u7236\u7ea7\u83dc\u5355"}});

        $('.icon').iconpicker({placement:'bottomLeft'});

        $('#menu-tree').nestable([]);

        $("input[data-bootstrap-switch]").each(function(){
            $(this).bootstrapSwitch('state', $(this).prop('checked'));
        });

        $('.menu-tree-tools').on('click', function(e){
            var action = $(this).data('action');
            if (action === 'expand') {
                $('.dd').nestable('expandAll');
            }
            if (action === 'collapse') {
                $('.dd').nestable('collapseAll');
            }
        });
    });

</script>
{% endblock %}
