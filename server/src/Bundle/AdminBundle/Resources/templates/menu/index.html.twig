{% extends "@AdminBundle/layout/main.html.twig" %}
{% import "@AdminBundle/macros/menu_links.html.twig" as macros %}

{% block page_title %}菜单管理{% endblock %}

{% block head_custom_stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/plugins/jquery-nestable2/jquery.nestable.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/plugins/fontawesome-iconpicker/css/fontawesome-iconpicker.min.css') }}">
{% endblock %}

{% block body_javascript %}
    {{ parent() }}
    <script src="{{ asset('assets/plugins/jquery-nestable2/jquery.nestable.min.js') }}"></script>
    <script src="{{ asset('assets/plugins/fontawesome-iconpicker/js/fontawesome-iconpicker.min.js') }}"></script>
{% endblock %}

{% block body_custom_javascript %}
    <script>
        $(function(){

            $(".mypoppage").popPage({
                width:"600px",
                height:"500px"
            })

            $('.select2').select2({ theme: 'bootstrap4', "allowClear":true,"placeholder":{"id":"","text":"\u7236\u7ea7\u83dc\u5355"}});

            $('.icon').iconpicker({placement:'bottomLeft'});

            $('#menu-tree').nestable({maxDepth:3, scroll:true});

            $('.menu-tree-tools').on('click', function(e){
                var action = $(this).data('action');
                if (action === 'expand') {
                    $('.dd').nestable('expandAll');
                }
                if (action === 'collapse') {
                    $('.dd').nestable('collapseAll');
                }
            });

            $("#menuSortSave").click(function(){
                var serialize = $('#menu-tree').nestable('serialize');
                requestPost('{{ path('admin_api_menu_updateSort') }}', JSON.stringify(serialize));
            });
        });

    </script>
{% endblock %}

{% block page %}
<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="card card-default">
                <div class="card-header">
                    <div class="btn-group">
                        <button class="btn btn-primary btn-sm menu-tree-tools" data-action="expand" title="展开">
                            <i class="fas fa-plus-square-o"></i>&nbsp;展开
                        </button>
                        <button class="btn btn-primary btn-sm menu-tree-tools" data-action="collapse"
                           title="收起">
                            <i class="fas fa-minus-square-o"></i>&nbsp;收起
                        </button>
                    </div>
                    {% if is_authorized('admin_api_menu_updateSort') %}
                        <div class="btn-group">
                            <button class="btn btn-info btn-sm" id="menuSortSave" title="保存">
                                <i class="fas fa-save"></i><span class="hidden-xs">&nbsp;保存</span>
                            </button>
                        </div>
                    {% endif %}
                </div>
                <!-- /.box-header -->
                <div class="card-body table-responsive no-padding">
                    <div class="dd" id="menu-tree">
                        {{ macros.menu_links(allMenu, 0) }}
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
        {% if is_authorized('admin_api_menu_add') %}
            <div class="col-md-6">
            <div class="card card-default">
                <div class="card-header with-border">
                    <h4 class="card-title">新增</h4>
                </div>
                <form method="POST" action="{{ path('admin_api_menu_add') }}" class="form-horizontal ajaxform" accept-charset="UTF-8" >
                    <div class="card-body" style="display: block;">
                            <div class="form-group row">
                                <label class="col-sm-2 require col-form-label">父级菜单</label>
                                <div class="col-sm-8">
                                    <select class="form-control form-control-sm select2" style="width: 100%;" name="parent_id" data-value="" >
                                        <option value="0">root</option>
                                        {% if menuSelect %}
                                            {% for menus in menuSelect %}
                                        <option value="{{ menus.id }}">{{ menus.name|raw }}</option>
                                            {% endfor %}
                                        {% endif %}
                                    </select>
                                </div>
                            </div>

                            <div class="form-group  row">
                                <label for="title" class="col-sm-2  require col-form-label">标题</label>
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-edit fa-fw"></i></span>
                                        </div>
                                        <input type="text" id="title" name="title" data-required="1" value="" class="form-control form-control-sm title" placeholder="输入标题" >
                                    </div>
                                </div>
                            </div>
                            <div class="form-group  row">
                                <label for="sort" class="col-sm-2  require col-form-label">排序</label>
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-sort-amount-up fa-fw"></i></span>
                                        </div>
                                        <input type="text" id="sort" name="sort" data-required="1" value="0" class="form-control form-control-sm" >
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="icon" class="col-sm-2 control-label">图标</label>
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                             <span class="input-group-text"><i class="fas fa-adjust fa-fw"></i></span>
                                        </div>
                                        <input style="width: 140px" type="text" id="icon" name="icon" value=""
                                               class="form-control form-control-sm icon"
                                               placeholder="输入图标"
                                        >
                                    </div>
                                    <span class="help-block">
                                        <i class="fas fa-info-circle"></i>
                                        &nbsp;更多图标请查看 <a href="http://fontawesome.io/icons/" target="_blank">http://fontawesome.io/icons/</a>
                                    </span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-2 require col-form-label">路径</label>
                                <div class="col-sm-8">
                                    <select class="form-control form-control-sm select2" style="width: 100%;" name="uri" data-value="" >
                                        {% if adminRoute %}
                                            {% for r in adminRoute %}
                                        <option value="{{ r }}">{{ r }}</option>
                                            {% endfor %}
                                        {% endif %}
                                    </select>
                                </div>
                            </div>

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">显示到导航</label>
                            <div class="col-sm-8">
                                <input type="checkbox" name="isShow" checked data-bootstrap-switch data-off-color="danger" data-on-color="success">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">锁定</label>
                            <div class="col-sm-8">
                                <input type="checkbox" name="isLock" data-bootstrap-switch data-off-color="danger" data-on-color="success">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">仅权限</label>
                            <div class="col-sm-8">
                                <input type="checkbox" name="isAccess" data-bootstrap-switch data-off-color="danger" data-on-color="success">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">描述</label>
                            <div class="col-sm-8">
                                <textarea class="form-control form-control-sm" name="descr" rows="3" placeholder="输入 ..."></textarea>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="card-footer">
                        <div class="col-md-2"></div>
                        <div class="col-md-8">
                            <div class="btn-group">
                                <button type="submit" class="btn btn-sm btn-info">提交</button>
                            </div>
                        </div>
                    </div>
                </form>
                <!-- /.box-body -->
            </div>
        </div>
        {% endif %}
    </div>

</section>

{% endblock %}

