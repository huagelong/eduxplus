{% extends "@AdminBundle/layout/pop.html.twig" %}

{% block page_title %}编辑试题{% endblock %}
{% block breadcrumb %}
  <li class="breadcrumb-item"><a href="{{ path("qa_admin_node_index", {chapterId:chapterId, chapterSubId:chapterSubId}) }}">试题管理</a></li>
{% endblock %}

{% block head_javascript %}
  {{ parent() }}
  <script src="{{ asset('assets/plugins/tinymce/tinymce.min.js') }}"></script>
  <script src="{{ asset('assets/plugins/tinymce/langs/zh_CN.js') }}"></script>
{% endblock %}

{% block page %}
  <section class="content">
    <div class="row">
      <div class="col-md-12">
        <div class="card card-default" style="padding-top: 10px;">
          <form method="POST" action="{{ path("qa_admin_node_do_edit", {id:id}) }}" class="form-horizontal ajaxform" accept-charset="UTF-8" >
            <div class="card-body" style="display: block;">
              {{ formData|raw }}
              <div class="form-group  row " id="choose">
                <label for="title" class="col-sm-2 require col-form-label" >选择项:</label>
                <div class="col-sm-8">
                  <div class="input-group">
                    A、<input type="text" style="margin-bottom: 10px;" name="choose[]" class="form-control form-control-sm" value="{{ if_set(info['sub']['options'], 0, '') }}" />
                  </div>
                  <div class="input-group">
                    B、<input type="text" style="margin-bottom: 10px;"  name="choose[]" class="form-control form-control-sm" value="{{ if_set(info['sub']['options'], 1, '') }}" />
                  </div>
                  <div class="input-group">
                    C、<input type="text" style="margin-bottom: 10px;"  name="choose[]" class="form-control form-control-sm" value="{{ if_set(info['sub']['options'], 2, '') }}" />
                  </div>
                  <div class="input-group">
                    D、<input type="text" style="margin-bottom: 10px;"  name="choose[]" class="form-control form-control-sm" value="{{ if_set(info['sub']['options'], 3, '') }}" />
                  </div>
                  <div class="input-group">
                    E、<input type="text" style="margin-bottom: 10px;"  name="choose[]" class="form-control form-control-sm" value="{{ if_set(info['sub']['options'], 4, '') }}" />
                  </div>
                </div>
              </div>
              <div class="form-group  row">
                <label for="title" class="col-sm-2 require col-form-label" >答案:</label>
                <div class="col-sm-8">
                  <div class="input-group">
                    <input type="text" name="answer" class="form-control form-control-sm" value="{{ info['sub']['answer'] }}" placeholder="多个答案使用英文逗号(,)隔开答案中有逗号(,)使用\," />
                  </div>
                </div>
              </div>
            </div>
            <div class="card-footer">
              <div class="col-md-2"></div>
              <div class="col-md-8">
                <div class="btn-group">
                  <button type="submit" class="btn btn-sm btn-info " style="margin-right: 10px;">提交</button>
                  <button type="reset" class="btn btn-default btn-sm reset"><i class="fa fa-undo"></i>&nbsp;&nbsp;重置</button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
{% endblock %}

{% block body_custom_javascript %}
  <script>
    $("#type").change(function(){
      var vl = $(this).val();
      if(vl <3){
        $("#choose").show();
      }else{
        $("#choose").hide();
      }
    });

    var vl = $("#type").val();
    if(vl <3){
      $("#choose").show();
    }else{
      $("#choose").hide();
    }

  </script>
{% endblock %}
