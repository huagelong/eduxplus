{% extends "@AdminBundle/layout/layout.html.twig" %}

{% block style %}
    {{ parent() }}
{% endblock %}

{% block body_class %} sidebar-mini control-sidebar-slide-open text-sm sidebar-collapse {% endblock %}
{% block body_javascript %}
    {{ parent() }}
    <script src="{{ asset('assets/admin/js/admin.js') }}"></script>
{% endblock %}
{% block body_main %}
    {{ parent() }}
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>
            <li class="nav-item d-none d-sm-inline-block">
              <a href="{{ path("admin_dashboard") }}" class="nav-link">首页</a>
            </li>
{#            <li class="nav-item d-none d-sm-inline-block">#}
{#              <a href="#" class="nav-link">Contact</a>#}
{#            </li>#}
          </ul>
        </nav>
        <!-- /.navbar -->

        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            {# <a href="javascript:;" class="brand-link">
                <img src="{{ asset(option("app.logo", 1, 0)) }}" alt="Logo" class="brand-image img-circle elevation-3"
                     style="opacity: .8">
                <span class="brand-text font-weight-light">&nbsp;</span>
            </a> #}

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="{{ asset(app.user.gravatar|default(option("app.user.default.gravatar", 1, 0))) }}" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="javascript:;" class="d-block">{{ app.user.fullName }}</a>
                    </div>
                </div>
                <!-- Sidebar Menu -->
                {{ render(controller('App\\Bundle\\AdminBundle\\Controller\\IndexController::mymenuAction')) }}
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

      <div class="content-wrapper iframe-mode" data-widget="iframe" data-loading-screen="750" style="padding: 5px;">
        <div class="nav navbar navbar-expand navbar-white navbar-light border-bottom p-0">
          <div class="nav-item dropdown">
            <a class="nav-link bg-blue dropdown-toggle" data-toggle="dropdown" href="javascript:;" role="button" aria-haspopup="true" aria-expanded="false">关闭</a>
            <div class="dropdown-menu mt-0">
              <a class="dropdown-item" href="javascript:;" data-widget="iframe-close" data-type="all">关闭所有</a>
              <a class="dropdown-item" href="javascript:;" data-widget="iframe-close" data-type="all-other">关闭其他所有</a>
            </div>
          </div>
          <a class="nav-link bg-light" href="javascript:;" data-widget="iframe-scrollleft"><i class="fas fa-angle-double-left"></i></a>
          <ul class="navbar-nav overflow-hidden" role="tablist"></ul>
          <a class="nav-link bg-light" href="javascript:;" data-widget="iframe-scrollright"><i class="fas fa-angle-double-right"></i></a>
          <a class="nav-link bg-light iframe-refresh" href="javascript:;" data-widget="iframe-refresh"><i class="fas fa-sync"></i></a>
          <a class="nav-link bg-light" href="javascript:;" data-widget="iframe-fullscreen"><i class="fas fa-expand"></i></a>
        </div>
        <div class="tab-content">
          <div class="tab-pane fade active show" id="panel-index" role="tabpanel" aria-labelledby="tab-index"><iframe name="main" style="height: 670px" src="{{ path('admin_dashboard') }}"></iframe></div>
          <div class="tab-empty" style="height: 87px;">
            <h4 class="display-4">错误，没有选择页面！</h4>
          </div>
          <div class="tab-loading" style="height: 87px;">
            <div>
              <h4 class="display-4"><i class="fa fa-sync fa-spin"></i></h4>
            </div>
          </div>
        </div>
      </div>

        <!-- Main Footer -->
        <footer class="main-footer">
            <!-- To the right -->
            <div class="float-right d-none d-sm-inline">
                Anything you want
            </div>
            <!-- Default to the left -->
            <strong>Copyright &copy; 2020 <a href="https://eduxplus.com">eduxplus.com</a>.</strong> All rights reserved.
        </footer>
    </div>
{% endblock %}
