{% extends "@AdminBundle/layout/main.html.twig" %}
{% import "@AdminBundle/macros/menu_links.html.twig" as macros %}

{% block page_title %}菜单管理{% endblock %}

{% block head_custom_stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/plugins/jquery-nestable2/jquery.nestable.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/plugins/fontawesome-iconpicker/css/fontawesome-iconpicker.min.css') }}">
{% endblock %}

{% block body_javascript %}
    {{ parent() }}
    <script src="{{ asset('assets/plugins/jquery-nestable2/jquery.nestable.min.js') }}"></script>
    <script src="{{ asset('assets/plugins/fontawesome-iconpicker/js/fontawesome-iconpicker.min.js') }}"></script>
{% endblock %}

{% block body_custom_javascript %}
    <script>
        $(function(){

            $(".mypoppage").popPage({
                width:"600px",
                height:"500px"
            })

            $('.select2').select2({ theme: 'bootstrap4', "allowClear":true,"placeholder":{"id":"","text":"\u7236\u7ea7\u83dc\u5355"}});

            $('.icon').iconpicker({placement:'bottomLeft'});

            $('#menu-tree').nestable({maxDepth:3, scroll:true});

            $('.menu-tree-tools').on('click', function(e){
                var action = $(this).data('action');
                if (action === 'expand') {
                    $('.dd').nestable('expandAll');
                }
                if (action === 'collapse') {
                    $('.dd').nestable('collapseAll');
                }
            });

            $("#menuSortSave").click(function(){
                var serialize = $('#menu-tree').nestable('serialize');
                requestPost('{{ path('admin_api_menu_updateSort') }}', JSON.stringify(serialize));
            });
        });

    </script>
{% endblock %}

{% block page %}
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card card-default">
                <div class="card-header">
                    <div class="btn-group">
                        <button class="btn btn-primary btn-sm menu-tree-tools" data-action="expand" title="展开">
                            <i class="fas fa-plus-square-o"></i>&nbsp;展开
                        </button>
                        <button class="btn btn-primary btn-sm menu-tree-tools" data-action="collapse"
                           title="收起">
                            <i class="fas fa-minus-square-o"></i>&nbsp;收起
                        </button>
                    </div>
                    {% if is_authorized('admin_api_menu_updateSort') %}
                        <div class="btn-group">
                            <button class="btn btn-info btn-sm" id="menuSortSave" title="保存">
                                <i class="fas fa-save"></i><span class="hidden-xs">&nbsp;保存排序 </span>
                            </button>
                        </div>
                    {% endif %}

                    {% if is_authorized('admin_api_menu_add') %}
                        <div class="btn-group">
                            <a class="btn btn-info btn-sm mypoppage" title="添加" href="{{ path("admin_menu_add") }}">
                                <i class="fas fa-plus"></i><span class="hidden-xs">&nbsp;添加 </span>
                            </a>
                        </div>
                    {% endif %}

                </div>
                <!-- /.box-header -->
                <div class="card-body table-responsive no-padding">
                    <div class="dd" id="menu-tree">
                        {{ macros.menu_links(allMenu, 0) }}
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
    </div>

</section>

{% endblock %}

