{% extends '@AppBundle/layout/base.html.twig' %}
{% block page_title %}{{ option("app.seo.title") }}{% endblock %}
{% block seo_kw %}{{ option("app.homepage.descr") }}{% endblock %}
{% block seo_descr %}{{ option("app.homepage.keyword") }}{% endblock %}

{% block head_stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/dist/base/base.min.css') }}">
  <link rel="stylesheet" href="{{ asset('assets/dist/basePc/base.min.css') }}">
     <link rel="stylesheet" href="{{ asset('assets/plugins/layui/css/layui.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/app/default/css/common/base.css') }}">
    {% block style %}{% endblock %}
{% endblock %}

{% block head_javascript %}
    {{ parent() }}
    <script>
        var globOption = {
            appDomain:"{{ option("app.domain") }}",
            appName: "{{ option("app.name") }}",
            appSendCaptchaUrl: "{{ path('app_glob_sendCaptcha') }}"
        }
    </script>
  <script src="{{ asset('assets/dist/base/base.min.js') }}"></script>
{% endblock %}

{% block head_favicon %}
    {{ parent() }}
    <link rel="icon" type="image/png" href="{{ asset(option("app.icon", 1, 0)) }}">
     <link rel="shortcut icon" type="image/x-icon" href="{{ asset(option("app.icon", 1, 0)) }}" />
{% endblock %}

{% block body_javascript %}
    {{ parent() }}
    <script src="{{ asset('assets/plugins/layui/layui.all.js') }}"></script>
    <script src="{{ asset('assets/app/default/js/common/base.js') }}"></script>
    <script>
        $(function(){
            $('body').uiInclude();
        });
    </script>
{% endblock %}

{% block body_main %}
    {{ parent() }}
  {% block content %}{% endblock %}
{% endblock %}


