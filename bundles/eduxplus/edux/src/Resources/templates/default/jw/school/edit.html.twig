{% extends "@CoreBundle/layout/pop.html.twig" %}

{% block page_title %}编辑学校{% endblock %}

{% block body_javascript %}
    {{ parent() }}
    <script src="{{ asset('assets/plugins/jquery-distpicker/distpicker.js') }}"></script>
    <script>
        $(function(){
            $('#distpicker').distpicker();
        });
    </script>
{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="{{ path("admin_jw_school_index") }}">学校管理</a></li>
{% endblock %}
{% block page %}
<div class="card">
    <form method="POST" action="{{ path("admin_api_jw_school_edit", {id:info['id']}) }}" class="form-horizontal ajaxform  needs-validation" accept-charset="UTF-8" novalidate>
        <div class="card-body" style="display: block;">
            {{ formData|raw }}
            <div class="form-group">
                <label for="title" class="require">省市:</label>
                <div class="input-group">
                    <div data-toggle="distpicker" id="distpicker">
                        <select name="state" data-province="{{ info['state'] }}"></select>
                        <select name="city" data-city="{{ info['city'] }}"></select>
                        <select name="region" data-district="{{ info['region'] }}"></select>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div class="btn-group">
                    <button type="submit" class="btn btn-sm btn-info " style="margin-right: 10px;">提交</button>
                    <button type="reset" class="btn btn-default btn-sm reset"><i class="fa fa-undo"></i>&nbsp;&nbsp;重置</button>
                </div>
            </div>
        </div>
    </form>
</div>
{% endblock %}
