{% extends '@WebsiteBundle/layout/base.html.twig' %}
{% block page_title %}{{ option("app.seo.title") }}{% endblock %}
{% block seo_kw %}{{ option("app.homepage.descr") }}{% endblock %}
{% block seo_descr %}{{ option("app.homepage.keyword") }}{% endblock %}

{% block head_stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/plugins/fontawesome-free/css/all.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/plugins/fontawesome-free/css/v4-shims.css') }}">
     <link rel="stylesheet" href="{{ asset('assets/plugins/layui/css/layui.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/app/default/css/common/base.css') }}">
    {% block style %}{% endblock %}
{% endblock %}

{% block head_javascript %}
    {{ parent() }}
    <script>
        var globOption = {
            appDomain:"{{ option("app.domain") }}",
            appName: "{{ option("app.name") }}",
            appSendCaptchaUrl: "{{ path('app_glob_sendCaptcha') }}"
        }
    </script>
    <script src="{{ asset('assets/plugins/base/jquery.js') }}"></script>
    <script src="{{ asset('assets/plugins/base/utils.js') }}"></script>
    <script src="{{ asset('assets/plugins/base/plugins/jquery-form/jquery.form.js') }}"></script>
    <script src="{{ asset('assets/plugins/base/plugins/jquery-cookie/jquerycookie.js') }}"></script>
    <script src="{{ asset('assets/plugins/base/plugins/layer/layer.js') }}"></script>
    <script src="{{ asset('assets/plugins/base/plugins/underscore/underscore-min.js') }}"></script>
    <script src="{{ asset('assets/plugins/base/modules/include.js') }}"></script>
    <script src="{{ asset('assets/plugins/base/modules/ajaxform.js') }}"></script>
    <script src="{{ asset('assets/plugins/base/modules/ajaxaction.js') }}"></script>
    <script src="{{ asset('assets/plugins/base/modules/captcha.js') }}"></script>
    <script src="{{ asset('assets/plugins/base/modules/widgets.js') }}"></script>
    <script src="{{ asset('assets/plugins/base/base.js') }}"></script>
{% endblock %}

{% block head_favicon %}
    {{ parent() }}
    <link rel="icon" type="image/png" href="{{ asset(option("app.icon", 1, 0)) }}">
     <link rel="shortcut icon" type="image/x-icon" href="{{ asset(option("app.icon", 1, 0)) }}" />
{% endblock %}

{% block body_javascript %}
    {{ parent() }}
    <script src="{{ asset('assets/plugins/layui/layui.all.js') }}"></script>
    <script src="{{ asset('assets/app/default/js/common/base.js') }}"></script>
    <script>
        $(function(){
            $('body').uiInclude();
        });
    </script>
{% endblock %}

{% block body_main %}
    {{ parent() }}
  {% block content %}{% endblock %}
{% endblock %}


