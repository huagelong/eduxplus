{% block head_favicon %}
    <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('assets/favicon.ico') }}">
{% endblock %}

{% block body_javascript %}
    {{ parent() }}
    <script src="{{ asset('assets/plugins/base/jquery.js') }}"></script>
    <script src="{{ asset('assets/plugins/base/utils.js') }}"></script>
    <script src="{{ asset('assets/plugins/base/plugins/jquery-form/jquery.form.js') }}"></script>
    <script src="{{ asset('assets/plugins/base/plugins/jquery-cookie/jquerycookie.js') }}"></script>
    <script src="{{ asset('assets/plugins/base/plugins/layer/layer.js') }}"></script>
    <script src="{{ asset('assets/plugins/base/plugins/underscore/underscore-min.js') }}"></script>
    <script src="{{ asset('assets/plugins/base/modules/include.js') }}"></script>
    <script src="{{ asset('assets/plugins/base/modules/ajaxform.js') }}"></script>
    <script src="{{ asset('assets/plugins/base/modules/ajaxaction.js') }}"></script>
    <script src="{{ asset('assets/plugins/base/modules/captcha.js') }}"></script>
    <script src="{{ asset('assets/plugins/base/modules/widgets.js') }}"></script>
    <script src="{{ asset('assets/plugins/base/base.js') }}"></script>

    <script src="{{ asset('assets/plugins/bootstrap/js/bootstrap.bundle.js') }}"></script>
    <script src="{{ asset('assets/plugins/overlayScrollbars/js/jquery.overlayScrollbars.js') }}"></script>
    <script src="{{ asset('assets/plugins/jquery-ui/jquery-ui.js') }}"></script>
    <script src="{{ asset('assets/plugins/admlte/js/adminlte.js') }}"></script>
    <script src="{{ asset('assets/plugins/moment/moment.min.js') }}"></script>
    <script src="{{ asset('assets/plugins/daterangepicker/daterangepicker.js') }}"></script>
    <script src="{{ asset('assets/plugins/select2/js/select2.full.js') }}"></script>
    <script src="{{ asset('assets/plugins/select2/js/i18n/zh-CN.js') }}"></script>
    <script src="{{ asset('assets/plugins/bootstrap-switch/js/bootstrap-switch.js') }}"></script>
