    <link rel="stylesheet" href="{{ asset('assets/plugins/fontawesome-free/css/v4-shims.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/admin/iconfont/iconfont.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/plugins/overlayScrollbars/css/OverlayScrollbars.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/plugins/admlte/css/adminlte.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/plugins/admlte/googlefonts/fonts.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/plugins/glyphicons/css/glyphicons.css') }}">
